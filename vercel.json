{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1",
      "continue": true
    },
    {
      "src": "/chat",
      "dest": "public/chat.html"
    },
    {
      "src": "/login",
      "dest": "public/login.html"
    },
    {
      "src": "/register",
      "dest": "public/register.html"
    },
    {
      "src": "/profile",
      "dest": "public/profile.html"
    },
    {
      "src": "/admin",
      "dest": "public/admin.html"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ]
}
